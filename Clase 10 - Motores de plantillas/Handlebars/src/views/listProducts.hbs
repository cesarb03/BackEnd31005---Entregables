<a type="button" href="/" class="btn btn-dark btn-lg mt-5">Agregar nuevo
  producto</a>

{{#if dataProducts}}
  <table class="table table-dark table-striped mt-5">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">Imagen</th>
      </tr>
    </thead>
    <tbody>
      {{#each dataProducts}}
        <tr>
          <th scope="row">{{title}}</th>
          <td>{{price}}</td>
          <td><img
              height="50px"
              width="80px"
              src={{thumbnail}}
              alt={{title}}
            /></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="row justify-content-center mt-5">
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <h2 class="display-5 text-center">Lista vacia</h2>
          <p class="lead">AÃºn no hay productos registrados</p>
        </div>
      </div>
    </div>
  </div>
{{/if}}