<%- include('layouts/main.ejs') %>

<body>
    <main class="container">
        <a type="button" href="/" class="btn btn-dark btn-lg mt-5">Agregar nuevo producto</a>

        <% if(dataProducts.length > 0) { %>
        <table class="table table-dark table-striped mt-5">
            <thead>
              <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Imagen</th>
              </tr>
            </thead>
            <tbody>
                <% dataProducts.forEach(product => { %>
              <tr>
                <th scope="row"><%= product.title %></th>
                <td><%= product.price %></td>
                <td><img height="50px" width="80px" src=<%= product.thumbnail %> alt=<%= product.title %> /></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
          <% } else { %>
            <div class="row justify-content-center mt-5">
                <div class="col-md-5">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="display-5 text-center">Lista vacia</h2>
                            <p class="lead">AÃºn no hay productos registrados</p>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </main>
</body>
</html>
